// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
    provider        = "prisma-client-js"
    previewFeatures = ["referentialIntegrity"]
}

datasource db {
    provider             = "mysql"
    url                  = env("DATABASE_URL")
    referentialIntegrity = "prisma"
}

model User {
    id            Int      @id @default(autoincrement())
    email         String   @unique
    username      String   @unique
    walletAddress String   @unique
    sessionId     String   @unique
    items         Item[]
    createdAt     DateTime @default(now())
    updatedAt     DateTime @updatedAt
}

model UserAuth {
    lookupKey  String   @id
    iv         String
    cipherText String
    createdAt  DateTime @default(now())
    updatedAt  DateTime @updatedAt
}

model ItemModel {
    id            Int        @id @default(autoincrement())
    code          String     @unique
    name          String
    imageUri      String
    smallImageUri String
    components    Components @relation(fields: [componentsId], references: [id])
    componentsId  Int        @unique
    items         Item[]
    createdAt     DateTime   @default(now())
    updatedAt     DateTime   @updatedAt
}

model Item {
    id           Int        @id @default(autoincrement())
    tokenId      Int        @unique
    model        ItemModel  @relation(fields: [modelId], references: [id])
    modelId      Int
    serialNumber String     @unique
    isStolen     Boolean    @default(false)
    owner        User       @relation(fields: [ownerId], references: [id])
    ownerId      Int
    activities   Activity[]
    components   Components @relation(fields: [componentsId], references: [id])
    componentsId Int        @unique
    createdAt    DateTime   @default(now())
    updatedAt    DateTime   @updatedAt
}

enum ActivityType {
    MINT
    TRANSFER
    REPAIR
    COMPONENT_CHANGE
}

model Activity {
    id           Int          @id @default(autoincrement())
    type         ActivityType
    item         Item         @relation(fields: [itemId], references: [id])
    itemId       Int
    externalLink String
    createdAt    DateTime     @default(now())
    updatedAt    DateTime     @updatedAt
}

model Components {
    id             Int        @id @default(autoincrement())
    frame          String
    fork           String
    rearDerailleur String?
    brakes         String?
    crankset       String?
    shifters       String?
    handlebar      String?
    seat           String?
    wheelset       String?
    tires          String?
    Item           Item?
    ItemModel      ItemModel?
    createdAt      DateTime   @default(now())
    updatedAt      DateTime   @updatedAt
}
